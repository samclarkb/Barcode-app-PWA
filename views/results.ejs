<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('layout/head'); %>
	</head>

	<body>
		<main>
			<img src="<%=product.image_url %>" alt="Product image" />
			<h1><%= product.product_name %>, <%= product.quantity %></h1>
			<p></p>

			<% if(product.ingredients_text_en) { %>
			<section>
				<h3>Ingredients:</h3>
				<ul>
					<% product.ingredients_text_en.split(', ').forEach(ingredient=> { %>
					<li>- <%= ingredient %></li>
					<% }) %>
				</ul>
			</section>
			<% } %> <% if(product.allergens_imported) { %>
			<section>
				<h3>Allergies:</h3>
				<ul>
					<% product.allergens_imported.split(', ').forEach(allergen=> { %>
					<li>- <%= allergen %></li>
					<% }) %>
				</ul>
			</section>
			<% } %>

			<a href="/" id="scan-button"> <img src="images/backButton.png" alt="" /> </a>
		</main>
	</body>
</html>
